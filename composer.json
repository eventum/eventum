{
	"name": "eventum/eventum",
	"description": "Eventum Issue / Bug tracking system",
	"type": "project",
	"homepage": "https://launchpad.net/eventum",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Elan RuusamÃ¤e",
			"email": "glen@delfi.ee",
			"role": "Developer"
		},
		{
			"name": "Bryan Alsdorf",
			"email": "balsdorf@gmail.com",
			"role": "Developer"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.org/eventum",
		"issues": "https://bugs.launchpad.net/eventum"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://eventum.github.io/composer/"
		}
	],
	"config": {
		"autoloader-suffix": "EventumCore",
		"component-baseurl": "/components",
		"component-dir": "htdocs/components"
	},
	"autoload": {
		"classmap": [ "lib/eventum/"]
	},
	"scripts": {
		"test": "phpunit"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"eventum/rpc": "~3.0.0",
		"ext-filter": "*",
		"ext-iconv": "*",
		"ext-imap": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-mysqli": "*",
		"ext-pcre": "*",
		"ext-session": "*",
		"ext-spl": "*",
		"fonts/liberation":"*",
		"ircmaxell/random-lib": "~1.1.0",
		"pear-pear.php.net/mail_mimedecode": "*",
		"pear-pear.php.net/math_stats": "*",
		"pear-pear.php.net/net_ldap2": "*",
		"pear-pear.php.net/net_pop3": "*",
		"pear-pear.php.net/net_smartirc": "*",
		"pear-pear.php.net/net_url": "*",
		"pear-pear.php.net/text_diff": "*",
		"pear/auth_sasl": "*",
		"pear/db": "*",
		"pear/mail": "*",
		"pear/mail_mime": "*",
		"pear/net_smtp": "1.6.*",
		"pear/net_socket": "*",
		"pear/xml_rpc": "*",
		"php": ">=5.3.3",
		"php-gettext/php-gettext": "1.0.*",
		"phplot/phplot": "~6.1.0",
		"smarty-gettext/smarty-gettext": "~1.0",
		"smarty/smarty": "~3.1.12",
		"sphinx/php-sphinxapi": "2.0.*"
	},
	"conflict": {
		"pear/pear-core-minimal": ">=1.10"
	},
	"require-dev": {
		"components/jquery": "~1.8.3",
		"components/jquery-blockui": "*@dev",
		"components/jquery-chosen": "*",
		"components/jquery-cookie": "~1.4.1",
		"components/jqueryui": "*",
		"enyo/dropzone": "~4.0.1",
		"jackmoore/autosize":"*",
		"jasig/phpcas":"~1.3.3",
		"malsup/form" :"*",
		"roave/security-advisories": "dev-master",
		"symfony/var-dumper": "~2.7.3"
	},
	"suggest": {
		"ext-ldap": "Adds support for LDAP auth backend"
	}
}
